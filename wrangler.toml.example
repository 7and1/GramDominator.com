name = "gramdominator-scraper"
main = "src/index.ts"
compatibility_date = "2026-01-08"
compatibility_flags = ["nodejs_compat"]
# account_id is set via CLOUDFLARE_ACCOUNT_ID environment variable
# Run: export CLOUDFLARE_ACCOUNT_ID="your-account-id"
# Or set in GitHub Secrets: CLOUDFLARE_ACCOUNT_ID

# Browser Rendering binding
[browser]
binding = "MYBROWSER"

# Workers AI binding
[ai]
binding = "AI"

# D1 database binding
# database_id is managed via wrangler secret: D1_DATABASE_ID
# Run: wrangler d1 create gramdominator-db or wrangler d1 list
# Then set: wrangler secret put D1_DATABASE_ID --env production
[[d1_databases]]
binding = "DB"
database_name = "gramdominator-db"

# Cron schedule (every 6 hours)
[triggers]
crons = ["0 */6 * * *"]
