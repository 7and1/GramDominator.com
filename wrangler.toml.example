name = "gramdominator-scraper"
main = "src/index.ts"
compatibility_date = "2026-01-08"
compatibility_flags = ["nodejs_compat"]

# SECURITY: account_id should be set via CLOUDFLARE_ACCOUNT_ID environment variable
# Never commit your actual account_id to version control
# account_id = "YOUR_ACCOUNT_ID_HERE"

# Browser Rendering binding
[browser]
binding = "MYBROWSER"

# Workers AI binding
[ai]
binding = "AI"

# D1 database binding
# IMPORTANT: Create D1 database first:
# 1. Run: wrangler d1 create gramdominator-db
# 2. Copy the database_id from the output
# 3. Add it to your wrangler.toml (not committed to git)
# 4. Or set via GitHub Secrets: D1_DATABASE_ID
[[d1_databases]]
binding = "DB"
database_name = "gramdominator-db"
# database_id = "YOUR_D1_DATABASE_ID_HERE"

# Cron schedule (every 6 hours)
[triggers]
crons = ["0 */6 * * *"]
